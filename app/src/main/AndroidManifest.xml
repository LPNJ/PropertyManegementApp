<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.z00s600149.propertymanegementapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application

        android:usesCleartextTraffic="true"

        android:networkSecurityConfig="@xml/network_security_config"


        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuActivity" />
        <activity android:name=".QRCodeReaderActivity" />
        <activity android:name=".NewAccountActivity" />
        <activity android:name=".PropertyInfoActivity" />
        <activity android:name=".ControlNumberIssuedActivity" />
        <activity android:name=".PropertySelectActivity" />
        <activity android:name=".PropertyEditActivity" />
        <activity android:name=".PropertyReferenceActivity" />
        <activity android:name=".PropertySelectManagerActivity" />
        <activity android:name=".PropertySelectAllActivity" />
        <activity android:name=".PropertySelectUserActivity" />
        <activity android:name=".PrinterActivity" />
    </application>

</manifest>